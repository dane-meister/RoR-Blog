<% unless comment.archived? %>
    <div class="comment">
        <p>
            <strong><%= comment.commenter %>: </strong><%= comment.body %>
        </p>
        <p>
            <%= link_to "Destroy Comment", [comment.article, comment], data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                        }, class: 'destroy-comment-link' %>
        </p>
    </div>
<% end %>
